<h3>
  <i class="far fa-calendar"></i>
  <%= @class[:date] %>
</h3>
<h1><%= @class[:instructor]%>'s <%= @class[:title] %><img class="img-fluid" src="/images/<%= @class[:type]%>.PNG"></h1>

<h3><%= @class[:description]%></h3>
<a href="<%= @class[:link] %>"><button class="btn btn-secondary btn-sm">Class Details</button></a>



<h3 class="mt-5">RSVP</h3>

<form action="/weeks/<%= @week[:id] %>/class/<%= @class[:id]%>/rsvps/create" method="POST" class="mt-2">
  <div class="form-group">
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="going" value="1">
      <label class="form-check-label">Yes</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="going" value="0">
      <label class="form-check-label">No</label>
    </div>
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-sm">Submit RSVP</button>
</form>

<h3 class="mt-5">Post Class Stats</h3>

<form action="/weeks/<%= @week[:id] %>/class/<%= @class[:id]%>/stats/create" method="POST" class="mt-2">
  <div class="form-group">
    <label>Rating (1-5)</label>
    <input type="text" class="form-control" name="rating">
  </div>
  <div class="form-group">
    <label>Total Output</label>
    <input type="text" class="form-control" name="total_output">
  </div>
  <div class="form-group">
    <label>Average Output</label>
    <input type="text" class="form-control" name="avg_output">
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary btn-sm">Submit Stats</button>
</form>
